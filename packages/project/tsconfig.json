{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "module": "ESNext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es5",
        "lib": [
          "dom",
          "es2015",
          "es5",
          "scripthost"
        ],
        "baseUrl": ".",
        "paths": {
          "APIS/*": [
            "src/apis/*"
          ],
          "COMPONENTS/*": [
            "src/components/*"
          ],
          "DUCKS/*": [
            "src/ducks/*"
          ],
          "STORE/*": [
            "src/store/*"
          ]
        }
    },
    "exclude": [
        "node_modules"
    ],    
}
